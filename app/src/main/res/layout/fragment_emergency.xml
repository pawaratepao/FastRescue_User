<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emer_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/addphoto"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btgetPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="เพิ่มถาพถ่าย" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ประเภทของผู้แจ้งเหตุ"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="ผู้ประสบเหตุ" />

                    <RadioButton
                        android:id="@+id/rb_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ผู้อยู่ในเหตุการณ์" />

                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ประเภทของเหตุที่เกิด"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/emeritem_spinner"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

                <EditText
                    android:id="@+id/ed_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="อุบัติเหตุอื่น ๆ(โปรดระบบุ)" />

                <EditText
                    android:id="@+id/emer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="รายละเอียดเกี่ยวกับเหตุ" />

                <Button
                    android:id="@+id/btsendemer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="แจ้งเหตุ" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>